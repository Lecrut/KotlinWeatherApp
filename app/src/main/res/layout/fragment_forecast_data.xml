<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background_one"
    >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:weightSum="3">
            <ImageView
                android:id="@+id/weatherIconFirst"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/few_clouds"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:textSize="20sp"
                android:text="Jutro"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/nextDayTemp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:text="27°C"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:weightSum="3">
            <ImageView
                android:id="@+id/weatherIconSecond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/few_clouds" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/secondDay"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/secondDayTemp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:text="27°C"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp">
            <ImageView
                android:id="@+id/weatherIconThird"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:src="@drawable/sun" />

            <TextView
                android:id="@+id/thirdDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20sp"
                android:text="Środa"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/thirdDayTemp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="27°C"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:weightSum="3">
            <ImageView
                android:id="@+id/weatherIconFourth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:layout_weight="1"
                android:src="@drawable/sun" />

            <TextView
                android:id="@+id/fourthDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed"
                android:text="Poniedziałek"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/fourthDayTemp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="27°C"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:weightSum="3">
            <ImageView
                android:id="@+id/weatherIconFifth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/sun" />

            <TextView
                android:id="@+id/fifthDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:fontFamily="sans-serif-condensed"
                android:autoSizeStepGranularity="2sp"
                android:textSize="20sp"
                android:text="Środa"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/fifthDayTemp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:text="27°C"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>